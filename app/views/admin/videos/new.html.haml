%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-6', class: 'form-horizontal' do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title, control_col: 'col-sm-3'
            = f.select :category_id, Category.all.collect { |c| [c.name, c.id] }
            = f.text_area :description, rows: 8
            = f.file_field :large_cover, label: "Large Cover", class: "btn btn-file"
            = f.file_field :small_cover, label: "Small Cover", class: "btn btn-file"
            = f.url_field :url, label: "Video URL"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
